.interview
	font-family 'Roboto', sans-serif
	font-weight 300
	color blackColor
	padding 80px 10px 70px
	&__headline
		font-size 70px
		font-weight 100
		text-align center
		margin-top 121px
		margin-bottom 35px
	&__button
		margin 0 auto

.section
	text-align center
	padding-top 30px
	width 768px
	margin 0 auto
	@media(max-width 840px)
		width 100%
	&-head
		&__icon
			margin 0 auto 25px
		&__headline
			font-size 30px
			margin-bottom 50px
