.header
	height 80px
	background-color #ffffff
	border-bottom 1px solid #d9d9d9
	position fixed
	width 100%
	top 0
	left 0
	z-index 10
	@media(max-width 768px)
		&_active
			.header-nav
				display block
			.header-nav__toggle
				&:after
					background-position -47px 0
	&-nav
		background #ffffff
		display flex
		justify-content space-between
		align-items center
		width 500px
		height 100%
		margin 0 auto
		position relative
		&__toggle
			size(100%)
			cursor pointer
			position relative
			display none
			@media(max-width 768px)
				display block
			&:after
				position absolute
				content ''
				size(47px)
				background url('../images/sprites/toggler.png')
				top 50%
				left 50%
				transform translate(-50%, -50%)
				pointer-events none
		@media(max-width 768px)
			width 100%
			height 216px
			display none
			border-bottom 1px solid #d9d9d9
		&__link
			text-decoration none
			color blueColor
			font-size 14px
			user-select none
			&_active
				color blackColor
			&:hover
				color blackColor
			@media(max-width 768px)
				display block
				text-align center
				padding 20px 0
